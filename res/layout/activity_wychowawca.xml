<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diary.wychowawca.WychowawcaActivity" >

    <Button
        android:id="@+id/ogloszenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ocena"
        android:layout_alignRight="@+id/obecnosc"
        android:layout_below="@+id/uwaga"
        android:onClick="onOgloszenie"
        android:text="Dodaj ogłoszenie" />

    <Button
        android:id="@+id/obecnosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ocena"
        android:layout_alignRight="@+id/ocena"
        android:layout_below="@+id/ocena"
        android:onClick="onObecnosc"
        android:text="Sprawdź obecność" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nieobecnosc"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/ocena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/nieobecnosc"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:onClick="onOcena"
        android:text="Dodaj ocenę" />

    <Button
        android:id="@+id/nieobecnosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/obecnosc"
        android:layout_centerHorizontal="true"
        android:onClick="onNieobecnosc"
        android:text="Usprawiedliw nieobecność" />

    <Button
        android:id="@+id/komunikator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ogloszenie"
        android:layout_alignRight="@+id/ogloszenie"
        android:layout_below="@+id/ogloszenie"
        android:onClick="onKomunikator"
        android:text="Komunikator" />

    <Button
        android:id="@+id/uwaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ogloszenie"
        android:layout_alignRight="@+id/ogloszenie"
        android:layout_below="@+id/nieobecnosc"
        android:onClick="onUwaga"
        android:text="Wystaw uwagę" />

    <Button
        android:id="@+id/button1"
        android:onClick="onPobierz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/komunikator"
        android:layout_alignRight="@+id/komunikator"
        android:layout_below="@+id/komunikator"
        android:text="Pobierz plik" />


</RelativeLayout>
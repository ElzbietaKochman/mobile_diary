<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diary.opiekun.OpiekunArchiwumActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/ogloszenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/obecnosci"
        android:layout_alignRight="@+id/obecnosci"
        android:layout_below="@+id/obecnosci"
        android:onClick="onOgloszenia"
        android:text="Tablica ogłoszeń" />

    <Button
        android:id="@+id/uwagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ogloszenia"
        android:layout_alignRight="@+id/ogloszenia"
        android:layout_below="@+id/ogloszenia"
        android:onClick="onUwagi"
        android:text="Zobacz uwagi" />

    <Button
        android:id="@+id/obecnosci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oceny"
        android:layout_centerHorizontal="true"
        android:onClick="onObecnosci"
        android:text="Sprawdź nieobecności" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1" />

    <Button
        android:id="@+id/oceny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ogloszenia"
        android:layout_alignRight="@+id/obecnosci"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="21dp"
        android:onClick="onOceny"
        android:text="Zobacz oceny" />

</RelativeLayout>
